<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <View
        android:id="@+id/view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:elevation="5dp"
        android:visibility="gone" />

    <com.airbnb.lottie.LottieAnimationView
        android:id="@+id/lavWon"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:elevation="5dp"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:lottie_rawRes="@raw/won" />

    <TextView
        android:id="@+id/tvTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:fontFamily="cursive"
        android:text="@string/title"
        android:textSize="36sp"
        android:textStyle="bold"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tvPlayerName"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@id/glGrid"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tvTitle" />

    <GridLayout
        android:id="@+id/glGrid"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:columnCount="3"
        android:rowCount="3"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tvPlayerName">

        <Button
            android:id="@+id/btn1"
            android:onClick="setValue" />

        <Button
            android:id="@+id/btn2"
            android:layout_marginStart="10dp"
            android:onClick="setValue" />

        <Button
            android:id="@+id/btn3"
            android:layout_marginStart="10dp"
            android:onClick="setValue" />

        <Button
            android:id="@+id/btn4"
            android:onClick="setValue" />

        <Button
            android:id="@+id/btn5"
            android:layout_marginStart="10dp"
            android:onClick="setValue" />

        <Button
            android:id="@+id/btn6"
            android:layout_marginStart="10dp"
            android:onClick="setValue" />

        <Button
            android:id="@+id/btn7"
            android:onClick="setValue" />

        <Button
            android:id="@+id/btn8"
            android:layout_marginStart="10dp"
            android:onClick="setValue" />

        <Button
            android:id="@+id/btn9"
            android:layout_marginStart="10dp"
            android:onClick="setValue" />
    </GridLayout>

    <androidx.constraintlayout.widget.Group
        android:id="@+id/gameGroup"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:constraint_referenced_ids="glGrid,tvPlayerName,tvTitle" />

</androidx.constraintlayout.widget.ConstraintLayout>